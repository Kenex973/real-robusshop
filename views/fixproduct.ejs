<html lang="en">

<%- include('layouts/header') %>

    <body>








        <div class="container animate__animated animate__bounceIn" style="margin-top: 90px;">
            <center>
                <div class="card col-12 col-md-6 col-lg-4">
                    <div class="card-body shadow border border-info">
                        <h3 class="card-title text-dark text-start">
                            <i class="fad fa-tool mt-2"></i>แก้ไขการ์ด
                        </h3>
                        <h5 class="card-title text-dark text-start">ชื่อการ์ด <%= product.name %>
                        </h5>
                        <form action="/product/fix/<%= product._id %>" method="POST" class="mt-3">

                            <div class="input-group mb-3">

                                <input type="text" class="form-control border-secondary" name="name"
                                    placeholder="ชื่อการ์ดใหม่" aria-label="ชื่อการ์ดใหม่" aria-describedby="basic-addon1"
                                    required>
                            </div>

                            <div class="input-group mb-3">

                                <input type="text" class="form-control border-secondary" name="desc"
                                    placeholder="คำอธิบายการ์ด" aria-label="คำอธิบายการ์ด" aria-describedby="basic-addon1"
                                    required>
                            </div>

                            <div class="input-group mb-3 ">

                                <input type="password" name="code" class="form-control border-secondary"
                                    placeholder="โค๊ดสินค้า" aria-label="โค๊ดสินค้า" aria-describedby="basic-addon1"
                                    required></input>
                            </div>

                            <div class="input-group mb-3 ">
                                <input type="number" name="price" class="form-control border-secondary"
                                    placeholder="ราคา" aria-label="ราคา" aria-describedby="basic-addon1"
                                    required></input>
                            </div>

                            <div class="input-group mb-3 ">
                                <input type="text" name="img" class="form-control border-secondary"
                                    placeholder="รูปภาพ" aria-label="รูปภาพ" aria-describedby="basic-addon1"
                                    required></input>
                            </div>

                            <button type="submit" class="btn btn-success"><i class="fad fa-lock-open-alt"></i>
                                แก้ไขการ์ด</button>
                        </form>
                    </div>
                </div>
            </center>
        </div>

    </body>

</html>