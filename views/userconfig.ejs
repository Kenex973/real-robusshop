<html lang="en">

<%- include('layouts/header') %>

    <body>








        <div class="container animate__animated animate__bounceIn" style="margin-top: 90px;">
            <center>
                <div class="card col-12 col-md-6 col-lg-4">
                    <div class="card-body shadow border border-info">
                        <h3 class="card-title text-dark text-start">
                            <i class="fad fa-tool mt-2"></i>แก้ไขผู้ใช้ <%= user.username %>
                        </h3>
                        <form action="/user/fix/<%= user._id %>" method="POST" class="mt-3">
                            <div class="input-group mb-3">

                                <input type="number" class="form-control border-secondary" name="point"
                                    placeholder="จำนวนพ้อยท์ (เดิม <%= user.point %>)" aria-label="คำอธิบายการ์ด" aria-describedby="basic-addon1"
                                    required>
                            </div>

                            <div class="input-group mb-3 ">

                                <input type="text" name="rank" class="form-control border-secondary"
                                    placeholder="แก้ไขแรงค์ (เดิม <%= user.rank %>))" aria-label="โค๊ดสินค้า" aria-describedby="basic-addon1"
                                    required></input>
                            </div>

                            <button type="submit" class="btn btn-success"><i class="fad fa-lock-open-alt"></i>
                                แก้ไขผู้ใช้</button>
                        </form>
                    </div>
                </div>
            </center>
        </div>

    </body>

</html>