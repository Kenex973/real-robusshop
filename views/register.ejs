<html lang="en">

<%- include('layouts/header') %>

    <body>

        <%- include('layouts/navbar') %>


            <% if(errors=="มีบางอย่างผิดพลาด" ) { %>
                <script>
                    Swal.fire({
                        icon: 'error',
                        title: 'มีชื่อผู้ใช้นี้ในระบบแล้ว...',
                        text: 'โปรดใช้ชื่ออื่น!'
                    })
                </script>
                <% } %>

                <% if(errors=="ไม่ใส่cap" ) { %>
                    <script>
                        Swal.fire({
                            icon: 'error',
                            title: 'โปรดยืนยัน Captcha...',
                            text: 'ลองอีกครั้ง!'
                        })
                    </script>
                    <% } %>

                    <% if(errors=="สำเร็จ" ) { %>

                        <script>

                            window.location = '/login'

                        </script>
                        <% } %>




                            <div class="container animate__animated animate__bounceIn" style="margin-top: 90px;">
                                <center>
                                    <div class="card col-12 col-md-6 col-lg-4">
                                        <div class="card-body shadow border border-info">
                                            <h3 class="card-title text-dark text-start">
                                                <i class="fad fa-cabinet-filing"></i> Register
                                            </h3>

                                            <form action="/user/register" method="POST" class="mt-3">
                                                <!-- username -->
                                                <div class="input-group mb-3">
                                                    <span class="input-group-text border-secondary" id="basic-addon1"><i
                                                            class="fad fa-user"></i></span>
                                                    <input type="text" class="form-control border-secondary"
                                                        name="username" placeholder="Username" aria-label="Username"
                                                        aria-describedby="basic-addon1" required>
                                                </div>
                                                <!-- password -->
                                                <div class="input-group mb-3">
                                                    <span class="input-group-text border-secondary" id="basic-addon1"><i
                                                            class="fad fa-key" style="font-size: 14px;"></i></span>
                                                    <input type="password" name="password"
                                                        class="form-control border-secondary" placeholder="Password"
                                                        aria-label="Username" aria-describedby="basic-addon1">
                                                </div>
                                                
                                                <div class="g-recaptcha" data-sitekey="6Ldph3gfAAAAAJkfz4Odk4gQCA9LKgcWO1EggA1l"></div>
                                                    <button type="submit" class="btn btn-success g-recaptcha mt-3"><i
                                                            class="fad fa-user-plus"></i>
                                                        Register</button>
                                            </form>

                                        </div>
                                    </div>
                                </center>
                            </div>
    </body>

</html>